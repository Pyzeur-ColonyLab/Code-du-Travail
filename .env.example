# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Model Configuration
MODEL_NAME=Pyzeur/Code-du-Travail-mistral-finetune
HUGGING_FACE_TOKEN=your_hugging_face_token_here
DEVICE=auto
LOG_LEVEL=INFO

# Docker-Mailserver Configuration
EMAIL_DOMAIN=yourdomain.com
EMAIL_ADDRESS=bot@yourdomain.com
EMAIL_PASSWORD=your_secure_password_here

# AI Model Parameters for Email Responses
EMAIL_MAX_TOKENS=1500
EMAIL_TEMPERATURE=0.3
EMAIL_TOP_P=0.95
EMAIL_TOP_K=50
EMAIL_REPETITION_PENALTY=1.15

# Email Bot Configuration
EMAIL_LOG_LEVEL=INFO
EMAIL_CHECK_INTERVAL=30
EMAIL_SIGNATURE=Assistant IA Code du Travail - ColonyLab
EMAIL_DISCLAIMER=Cette réponse est fournie à titre informatif uniquement. Pour des conseils juridiques précis et personnalisés, consultez un avocat spécialisé en droit du travail.

# Docker-Mailserver Advanced Settings (optional)
DMS_DEBUG=0
ENABLE_RSPAMD=1
ENABLE_CLAMAV=1
ENABLE_FAIL2BAN=1
ENABLE_POSTGREY=1
ENABLE_MANAGESIEVE=1
SSL_TYPE=self-signed
PERMIT_DOCKER=network
SPOOF_PROTECTION=1
ENABLE_SRS=1
ONE_DIR=1

# Generation Configuration
USE_QUANTIZATION=true
LOAD_IN_4BIT=true
MAX_LENGTH=2048
